<view class="payli">
  <view class='li'>
    <text class='l'>联系人</text>
    <input class='r intr' placeholder='请输入联系人姓名'></input>
  </view>
</view>

<view class="payli">
  <view class='li' style='border:0;'>
    <text class='l'>联系电话</text>
    <input class='r intr' placeholder='请输入联系人电话'></input>
  </view>
</view>

<view class='paystore' catchtap='storeClick'>
  <view id='list'>
    <view class='list-item' wx:for="{{list}}" wx:key="list" wx:for-item="item">
      <view class='list-box'>
        <view class='list-img'>
          <image src='{{item.path}}'></image>
        </view>
        <view class='list-info'>
          <view class='list-title'>
            <view class='list-name left'>{{item.name}}</view>
            <view class='list-name-img left'>
              <image src='/images/grade_0{{item.grade}}.png'></image>
            </view>
            <view class='clear'></view>
          </view>
          <view class='list-evaluate'>
            <view wx:if="{{item.order.status != 'none'}}">
              <view class='list-evaluate-left left'>
                总评价：
                <text>{{item.order.score}}分</text>
              </view>
              <view class='list-evaluate-line left'>
                |
              </view>
              <view class='list-evaluate-right left'>
                总订单：
                <text>{{item.order.order_num}}笔</text>
              </view>
              <view class='clear'></view>
            </view>
            <view wx:else class='list-evaluate-left'>
              暂无数据
            </view>
          </view>
          <view class='list-address'>
            <text>{{item.address}}</text>
          </view>
          <view class='list-more'>
            <view class='list-tag left' wx:for="{{item.tag}}" wx:key="tag" wx:for-item="itemTag">{{itemTag}}</view>
            <view class='list-distance right'>{{item.distance}}</view>
            <view class='clear'></view>
          </view>
        </view>
        <view class='clear'></view>
      </view>
    </view>
  </view>
</view>

<view class="payli" catchtap='listClick' style='margin-top:20rpx;'>
  <view class='li'>
    <text class='l'>标准漆</text>
    <text class='r'>共3个标准面</text>

.listCon .li{
  padding: 20rpx 30rpx;
  border-bottom: 20rpx solid #e7e7e7;
  height: 180rpx;
}
.listCon .li .img{
  width: 180rpx;
  height: 180rpx;
  float: left;
}
.listCon .li .img image{
  width: 180rpx;
  height: 180rpx;
}
.listCon .text{
  float: right;
  width: 500rpx;
}
.listCon .text .name{
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #333;
}
.listCon .text .cs{
  font-size: 24rpx;
  color: #767676;
  height: 40rpx;
  line-height: 40rpx;
}
.listCon .text .price{
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.listCon .text .price .l{
  color: #ff7979;
  float: left;
}
.listCon .text .price .r{
  color: #767676;
  float: right;
}
.listCon .text .top{
  width: 188rpx;
  height: 37rpx;
  position: relative;
  margin-top: 10rpx;
}
.listCon .text .top image{
  width: 188rpx;
  height: 37rpx;
}
.listCon .text .top text{
  width: 188rpx;
  height: 37rpx;
  line-height: 45rpx;
  position: absolute;
  left: 0;
  top: 0;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
}

.payxinx{
  padding: 0 30rpx;
  border-bottom: 20rpx solid #e7e7e7;
}
.payxinx .li{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e7e7e7;
  font-size: 28rpx;
}
.payxinx .li .l{
  float: left;
}
.payxinx .li .r{
  float: right;
}
.payxinx .li:last-child{
  border: 0;
}
.payxinx input{
  border: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
}
.paypic .tit{
  height: 60rpx;
  background-color: #e7e7e7;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
}
.paypic .pic{
  overflow: hidden;
}
.paypic .pic .just{
  width: 233rpx;
  margin-left: 94rpx;
  float: left;
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 50rpx;
}
.paypic .pic .just image{
  width: 233rpx;
  height: 233rpx;
}
.sure{
  width: 100%;
  height: 100rpx;
  background-color: #11a8e1;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
  margin-top: 50rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}
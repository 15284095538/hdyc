/* pages/my/info/mycar/addcar/addcar.wxss */
page {
  background-color: #eee;
}
.nav {
  position: fixed;
  right: 10rpx;
  top: 5%;
  height: 80%;
  width: 50rpx;
  font-family: Arial, Helvetica, sans-serif
}
.letter {
  width: 40rpx;
  height: 40rpx;
  font-size: 26rpx;
}
.letter-text {
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50%;
}
.letter-actived {
  background-color: #ccc;
}
.groups {
  /*height: 100%;*/
}
scroll-view {
  height: calc(100vh - 8px);
}
.group-name {
  padding: 10rpx 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f6f6f6;
}
.group-users {
  background-color: #fff;
}
.user {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #eee;
  display: inline-flex;
}
.user-avatar {
  border-right: 1px solid #eee;
  width: 100rpx;
  height: 100rpx;
}
.user-avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user-name {
  padding-left: 30rpx;
}

.listToplayer {
  width: 60%;
  height: 100%;
  position: fixed;
  left: 40%;
  top: 0rpx;
  font-size: 26rpx;
  background-color: #fff;
  z-index: 999;
  border-left: 1px solid #999;
}

.listToplayer .li {
  padding: 0 20rpx;
  border-bottom: 1px solid #e7e7e7;
  height: 99rpx;
  line-height: 99rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #333;
}

.listToplayer .select {
  color: #11a8e1;
}

.listToplayeranment {
  animation: 0.3s linear 0s rotate;
  animation-fill-mode: forwards;
  -webkit-transition: 0.3s linear 0s rotate;
  -moz-transition: 0.3s linear 0s rotate;
  -o-transition: 0.3s linear 0s rotate;
}

@keyframes rotate {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}
.none {
  display: none;
}

.block {
  display: block;
}
/* pages/my/business/mystore/mystore.wxss */

page {
  background-color: #f6f6f6;
}

/* list */

.left {
  float: left;
}

.right {
  float: right;
}

.clear {
  clear: both;
}

.list-item {
  height: 247rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list-box {
  padding: 30rpx;
}

.list-img {
  width: 210rpx;
  height: 187rpx;
  padding-right: 30rpx;
  float: left;
}

.list-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.list-info {
  float: left;
  width: calc(100% - 240rpx);
  margin-top: 10rpx;
}

.list-title {
  height: 30rpx;
}

.list-name {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
}

.list-name-img {
  position: relative;
  width: 35rpx;
  height: 30rpx;
  margin-left: 18rpx;
}

.list-name-img image {
  width: 35rpx;
  height: 30rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.list-evaluate {
  height: 24rpx;
  margin: 18rpx 0rpx;
}

.list-evaluate-left, .list-evaluate-right {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #aeaeae;
}

.list-evaluate-left text, .list-evaluate-right text {
  color: #ff7979;
}

.list-evaluate-line {
  width: 51rpx;
  height: 24rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  text-align: center;
  color: #c8c8c8;
}

.list-address {
  height: 24rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #aeaeae;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-more {
  height: 26rpx;
  margin-top: 20rpx;
}

.list-tag {
  width: 42rpx;
  font-size: 16rpx;
  line-height: 26rpx;
  color: #11a8e1;
  border: 1rpx solid #11a8e1;
  text-align: center;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.list-distance {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #aeaeae;
}

/* pages/my/business/account/account.wxss */

page {
  background-color: #f6f6f6;
}

.left {
  float: left;
}

.right {
  float: right;
}

.clear {
  clear: both;
}

/* header */

#header {
  height: 320rpx;
  width: 100%;
  background-color: #11a8e1;
  position: relative;
  text-align: center;
  margin-bottom: 20rpx;
}

.header-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.user-img {
  width: 130rpx;
  height: 130rpx;
  margin: 0rpx auto;
  margin-bottom: 10rpx;
}

.user-img image {
  width: 130rpx;
  height: 130rpx;
}

.user-name {
  font-size: 36rpx;
  line-height: 48rpx;
  letter-spacing: 2rpx;
  color: #fff;
}

/* menu */

#menu {
  height: 200rpx;
  background-color: #fff;
}

.menu-list {
  height: 40rpx;
  padding: 30rpx;
}
.menu-list-img{
  height: 40rpx;
  width: 60rpx;
}
.menu-list-img image{
  height: 40rpx;
  width: 60rpx;
}
.menu-list-title{
  font-size: 30rpx;
	line-height: 40rpx;
	letter-spacing: 2rpx;
	color: #333333;
  margin-left: 20rpx;
}
.menu-list-status{
  font-size: 26rpx;
	line-height: 40rpx;
	letter-spacing: 1rpx;
	color: #aeaeae;
}
.menu-list-status image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}
page{
  background-color: #f6f6f6;
}

.collageTop{
  width: 750rpx;
  height: 514rpx;
  position: relative;
}
.collageTop image{
  width: 750rpx;
  height: 514rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.collageTop .countdown{
  width: 400rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  left: 50%;
  margin-left: -200rpx;
  color: #fff;
  font-size: 28rpx;
  top: 40rpx;
}
.collageTop .countdown text{
  float: left;
}
.collageTop .countdown .t{
  display: block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 5rpx;
  color: #11a8e1;
}

.collageNum {
  margin-top: -140rpx;
  position: relative;
  z-index: 2;
}
.collageNum .li{
  width: 216rpx;
  height: 280rpx;
  background-color: #fff;
  float: left;
  border-radius: 30rpx;
  margin-left: 26rpx;
  text-align: center;
  box-shadow: 0rpx 5rpx 20rpx #e1e1e1;
}
.collageNum .li .t{
  font-size: 32rpx;
  color: #11a8e1;
  margin-top: 50rpx;
}
.collageNum .li .n{
  font-size: 28rpx;
  color: #333333;
  margin-top: 20rpx;
}
.collageNum .li .b{
  width: 150rpx;
  height: 60rpx;
  margin: 30rpx auto 0;
  background-color: #11a8e1;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}

.clooageNum{
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #333;
  overflow: hidden
}
.clooageNum .p{
  margin-top: 30rpx;
}
.clooageNum .text{
  margin-top: -30rpx;
}

.next{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fcf2d2;
  text-align: center;
  font-size: 28rpx;
  color: #fb6e14;
  position: fixed;
  left: 0;
  bottom:0;
}

.content .img{
  width: 320rpx;
  height: 300rpx;
  margin: 20rpx auto;
  text-align: center;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}
.content .img image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
}
.content .img text{
  line-height: 40rpx;
}
page{
  background-color: #f6f6f6;
  font-size: 28rpx;
  color: #333;
}

.indTop{
  width: 100%;
  height: 60rpx;
  background-color: #11a8e1;
  padding: 0rpx 0 10rpx 0;
}
.indTop .city{
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  cursor: pointer;
  float: right;
  line-height: 60rpx;
  margin-right: 30rpx;
}
.indTop .city image{
  width: 22rpx;
  height: 12rpx;
  vertical-align: middle;
  margin: 0 3px 2px 0;
}

.indTop .search{
  width: 580rpx;
  height: 60rpx;
  background-color: #3db1dd;
  border-radius: 5px;
  float: left;
  margin-left: 30rpx;
}
.indTop .search .button{
  width: 60rpx;
  height: 60rpx;
  position: relative;
  float: left;
}
.indTop .search .button image{
  width: 33rpx;
  height: 33rpx;
  position: absolute;
  right: 0;
  top: 15rpx;
}
.indTop .search .text{
  font-size: 26rpx;
  color: #fff;
  height: 60rpx;
  border: 0;
  line-height: 60rpx;
  width: 480rpx;
  margin-left: 20rpx;
  float: left;
}

.tit{
  padding: 30rpx 30rpx;
}

.hote{
  padding: 30rpx 30rpx 30rpx 10rpx;
  background-color: #fff;
}
.hote text{
  border: 1px solid #e1e1e1;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.his{
  background-color: #fff;
  padding: 30rpx;
}
.his .li{
  height: 95rpx;
  border-bottom: 1rpx solid #e1e1e1;
  line-height: 95rpx;
  font-size: 30rpx;
}

.his .sure{
  width: 410rpx;
  height: 70rpx;
  border: 1rpx solid #e1e1e1;
  margin: 30rpx auto 0;
  text-align: center;
  line-height: 70rpx;
}
.his .sure image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin: 0 10rpx 7rpx 0;
}
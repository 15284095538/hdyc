var filters = {
  toFix: function (value, divisor,size) {
    var num = (parseInt(value) / divisor).toFixed(size);
    return num
  },
  toWords:function( text, size){
    if ( text.length > size ){
      var text = text.substring(0, size) + '...';
    }
    return text
  }
}
module.exports = {
  toFix: filters.toFix,
  toWords: filters.toWords
}
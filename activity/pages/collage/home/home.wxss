page{
  background-color: #f6f6f6;
}

.collageTop{
  width: 750rpx;
  height: 514rpx;
  position: relative;
}
.collageTop image{
  width: 750rpx;
  height: 514rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.collageTop .countdown{
  width: 275rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  left: 50%;
  margin-left: -137.5rpx;
  color: #fff;
  font-size: 28rpx;
}
.collageTop .countdown text{
  float: left;
}
.collageTop .countdown .t{
  display: block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 5rpx;
  color: #ffa546;
}

.collageNum {
  margin-top: -140rpx;
  position: relative;
  z-index: 2;
}
.collageNum .li{
  width: 216rpx;
  height: 280rpx;
  background-color: #fff;
  float: left;
  border-radius: 30rpx;
  margin-left: 26rpx;
  text-align: center;
  box-shadow: 0rpx 5rpx 20rpx #e1e1e1;
}
.collageNum .li .t{
  font-size: 32rpx;
  color: #ffa546;
  margin-top: 50rpx;
}
.collageNum .li .n{
  font-size: 28rpx;
  color: #333333;
  margin-top: 20rpx;
}
.collageNum .li .b{
  width: 150rpx;
  height: 60rpx;
  margin: 30rpx auto 0;
  background-color: #fb6e14;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}
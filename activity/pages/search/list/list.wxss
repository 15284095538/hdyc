/* activity/pages/search/list/list.wxss */

page {
  background-color: #f6f6f6;
  font-size: 28rpx;
  color: #333;
}

.indTop {
  width: 100%;
  height: 60rpx;
  background-color: #11a8e1;
  padding: 0rpx 0 10rpx 0;
}

.indTop .city {
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  cursor: pointer;
  float: right;
  line-height: 60rpx;
  margin-right: 30rpx;
}

.indTop .city image {
  width: 22rpx;
  height: 12rpx;
  vertical-align: middle;
  margin: 0 3px 2px 0;
}

.indTop .search {
  width: 580rpx;
  height: 60rpx;
  background-color: #3db1dd;
  border-radius: 5px;
  float: left;
  margin-left: 30rpx;
}

.indTop .search .button {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  float: left;
}

.indTop .search .button image {
  width: 33rpx;
  height: 33rpx;
  position: absolute;
  right: 0;
  top: 15rpx;
}

.indTop .search .text {
  font-size: 26rpx;
  color: #fff;
  height: 60rpx;
  border: 0;
  line-height: 60rpx;
  width: 480rpx;
  margin-left: 20rpx;
  float: left;
}

/* list */

.list {
  height: 159rpx;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #aeaeae;
}

.list .img {
  height: 159rpx;
  width: 159rpx;
  padding-right: 30rpx;
  float: left;
}

.list .img image {
  height: 159rpx;
  width: 159rpx;
}

.list .info {
  height: 159rpx;
  width: calc(100% - 189rpx);
  float: left;
}

.list .info .title {
  font-size: 30rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list .info .sub-title {
  font-size: 24rpx;
  color: #aeaeae;
}

.list .info .price {
  font-size: 30rpx;
  color: #ff7979;
  line-height: 75rpx;
}

.NoneSj{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 98;
  left: 0;
  top: 110rpx;
}
.NoneSj image{
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  left: 50%;
  top: 20%;
  margin: 0 0 0 -150rpx;
}